{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NW__" : false,
    "BACKEND": true
  },
  "rules": {
    "camelcase": 2,
    "curly": 2,
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-infix-ops": 2,
        "strict": 0,
    "max-len": [1, 120, 2, {
      "ignoreComments": true
    }],
    "no-console": 0,
    "new-cap": 0,
    "no-undef": [2],
    "arrow-body-style": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-space-before-closing": 0,
    "react/jsx-no-bind": 0,
    "prefer-template": 0
  }
}
